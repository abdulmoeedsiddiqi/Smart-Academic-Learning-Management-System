<%- include('../partials/header', { title: title }) %>
<%- include('../partials/admin-sidebar', { user: user }) %>

<div class="flex-1 p-6">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">System Reports</h1>

  <%- include('../partials/messages') %>

  <!-- Report Summary Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Summary (<%= reports.period %>)</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      
      <!-- New Users Card -->
      <div class="bg-blue-50 p-4 rounded-lg border border-blue-200">
        <dt class="text-sm font-medium text-blue-600 truncate">New Users Added</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-900"><%= reports.newUsers %></dd>
      </div>

      <!-- New Courses Card -->
      <div class="bg-green-50 p-4 rounded-lg border border-green-200">
        <dt class="text-sm font-medium text-green-600 truncate">New Courses Added</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-900"><%= reports.newCourses %></dd>
      </div>

      <!-- Placeholder for Removed Users (Requires Audit Log/Soft Deletes) -->
      <!-- 
      <div class="bg-red-50 p-4 rounded-lg border border-red-200">
        <dt class="text-sm font-medium text-red-600 truncate">Users Removed</dt>
        <dd class="mt-1 text-3xl font-semibold text-red-900">N/A</dd> 
      </div> 
      -->

      <!-- Placeholder for Removed Courses (Requires Audit Log/Soft Deletes) -->
      <!--
      <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
        <dt class="text-sm font-medium text-yellow-600 truncate">Courses Removed</dt>
        <dd class="mt-1 text-3xl font-semibold text-yellow-900">N/A</dd>
      </div>
      -->

    </div>
  </div>

  <!-- Totals Section -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Current Totals</h2>
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-3">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Total Users</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= reports.totals.users %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Total Students</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= reports.totals.students %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Total Teachers</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= reports.totals.teachers %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Total Courses</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= reports.totals.courses %></dd>
      </div>
      <!-- Add more totals as needed -->
    </dl>
  </div>

  <!-- Add more detailed report sections here as needed -->
  <!-- e.g., Charts, tables for enrollment trends, activity logs -->

</div>

<%- include('../partials/footer') %>